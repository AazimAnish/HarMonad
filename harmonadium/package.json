{
  "name": "harmonad",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run sensor-server\" \"npm run next-dev\" --names \"SENSOR,NEXT\" --prefix-colors \"blue,green\"",
    "next-dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "sensor-server": "npx tsx src/server/lid-angle-server.ts",
    "build-sensor-bridge": "clang -framework Foundation -framework IOKit -framework CoreFoundation -o sensor-bridge src/server/build-sensor-bridge.m",
    "setup": "npm run build-sensor-bridge && echo 'Setup complete! Run npm run dev to start both servers.'"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.90.2",
    "@types/canvas-confetti": "^1.9.0",
    "axios": "^1.12.2",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ethers": "^6.15.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.37.8",
    "wagmi": "^2.17.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.5.13",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
